#!/usr/bin/env ruby

require 'gli'
require 'broadside'

include GLI::App
include Broadside::LoggingUtils

program_desc 'A command-line tool for deployment and development of docker applications.'
version Broadside::VERSION

subcommand_option_handling :normal
arguments :strict
synopsis_format :full

commands_from File.expand_path(File.join(File.dirname(__FILE__), '/../lib/broadside/cli'))

exit run(ARGV)
